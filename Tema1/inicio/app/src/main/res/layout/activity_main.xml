<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- wrap_content: ocupa solo lo que necesitas -->
    <!-- match_content: ocupa lo minimo pegado al padre(pegado al Linear) -->
    <!-- text-size: cambia el tama침o del texto lo podemos poner en sp,dp,px -->
    <!-- gravity: para situarlo al centro-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="mi primer app de Android"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent" />
    <!-- El boton muy parecido a lo anterior -->
    <Button
        android:id="@+id/botonPulsar"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsar"
        />
    <!-- margin-top: para separar por arriba -->
    <!-- lo normal no es que lo cierre sino que lo (auto cierre solo poner />)-->

    <!-- Importante: Si yo lo que quiero es controlar el bot칩n lo que debo hacer
     es llevarme el bot칩n a la parte l칩gica para ello hay que darle un atributo ID "@+id" siempre-->

</LinearLayout>